<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
	<property name="ikang.logger" value="DEBUG" />

	<!-- 控制台 -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %caller{1} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 环境配置 -->
	<root level="INFO">
        <appender-ref ref="console"/>
    </root>

	<logger name="org.apache" level="WARN" />

	<logger name="java.sql.Connection" level="WARN" />
	<logger name="java.sql.Statement" level="WARN" />
	<logger name="java.sql.PreparedStatement" level="WARN" />

	<logger name="org.springframework.validation" level="WARN" />
	<logger name="org.springframework" level="WARN" />

	<logger name="org.mybatis" level="WARN" />

	<logger name="com.ikang" level="${ikang.logger}" />
	<logger name="org.apache.kafka" level="WARN" />
</configuration>
